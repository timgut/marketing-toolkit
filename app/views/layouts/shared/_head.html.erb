<head>
  <title>AFSCME Toolkit<%= content_for(:title).nil? ? "" : ": #{content_for(:title)}" %></title>

  <meta charset='utf-8' />
  <meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible' />
  <meta content='en-us' http-equiv='Content-Language' />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" /> 

  <!-- Basic Meta -->
  <meta name="title"         content="AFSCME Toolkit" />
  <meta name="copyright"     content="(c) Copyright <%= DateTime.now.year %> AFSCME" /> 

  <!-- CSS -->
  <%= stylesheet_link_tag "reset.css", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag "type.css", 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag "global.css", 'data-turbolinks-track': 'reload' %>

  <% if params[:controller] == "users" && params[:action] == "sign-in" %>
    <%= stylesheet_link_tag "login", 'data-turbolinks-track': 'reload' %>
  <% else %>
    <%= stylesheet_link_tag "styles", 'data-turbolinks-track': 'reload' %>
  <% end %>

  <!-- Scripts -->
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->

  <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700|Roboto:700" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
