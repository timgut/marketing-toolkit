<p id="notice"><%= notice %></p>

<h1>Templates</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= link_to template.title, campaign_template_path(@campaign, template) %></td>
        <td><%= link_to 'Edit', edit_campaign_template_path(@campaign, template) %></td>
        <td><%= link_to 'Destroy', campaign_template_path(@campaign, template), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Template', new_campaign_template_path(@campaign) %>
