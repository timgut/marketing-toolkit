<% no_link ||= false %>

<% img_url = image.cropped_image_url ? image.cropped_image_url : image.original_image_url %>

<% if no_link == true %>
  <figure>
    <img src="<%= img_url %>" alt="<%= image.filename %>" />
    <figcaption><%= image.filename %></figcaption>
  </figure>
<% else %>
  <figure>
    <%= link_to edit_image_path(image) do %>
      <img src="<%= img_url %>" alt="<%= image.filename %>" />
      <figcaption><%= image.filename %></figcaption>
    <% end %>

    <ul class="options"> 
      <li>
        <a href="javascript:void(0);" title="Options" class="icons">+</a>
        <ol>
          <% case image.status %>
          <% when "trash" %>
            <%= render partial: "images/menus/trash", locals: {image: image} %>
          <% else %>
            <%= render partial: "images/menus/publish", locals: {image: image} %>
          <% end %>
        </ol>
      </li>
    </ul>
  </figure>
<% end %>
