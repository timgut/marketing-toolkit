<li>
  <%= link_to(
    "<span class='icons'>c</span> Duplicate".html_safe,
    duplicate_document_path(document),
    title: "Duplicate"
  ) %>
</li>
<li>
  <%= link_to(
    "<span class='icons'>d</span> Download".html_safe,
    download_link(document),
    title: "Download",
    remote: true,
  ) %>
</li> 
<li>
  <%= link_to(
    "<span class='icons'>x</span> Delete".html_safe,
    trash_document_path(document),
    title:  "Delete",
    method: :patch,
    data:   {confirm: "Are you sure that you want to move this document to the trash?"} 
  ) %>
</li>
<li>
  <%= link_to(
    "<span class='icons'>S</span> Preview".html_safe,
    preview_document_path(document),
    title: "Preview PDF",
    target: :_blank 
  ) %>
</li>
<% if current_user.admin? %>
  <li>
    <%= link_to(
      "<span class='icons'>F</span> Rebuild PDF".html_safe,
      download_document_path(document),
      title: "Rebuild PDF",
      target: :_blank,
      data: {id: document.id, job: "generateThumbnail"} 
    ) %>
  </li> 
<% end %>
