<% content_for :title {"Edit Document: #{@document.title}"} %>
<%= render partial: "/shared/errors", locals: {record: @document} %>

<% breadcrumb :edit_document, @document, @template %>
<%= render partial: "documents/breadcrumb_extras" %>
<%= render partial: "documents/populate_data" %>

<%= render 'form' %>
<%= render partial: "images/modal" %>

<% if params[:generating] %>
  <script type="text/javascript">
    $(document).ready(function(){
      new window.Toolkit.Job(undefined, "pdfAndThumbnail", <%= @document.id %>)
    });
  </script>
<% end %>