<%= form_for(flyer) do |f| %>
  <%= render partial: "/shared/errors", locals: {record: flyer} %>

  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label "Choose Template" %><br />
    <%= f.select :template, options_from_collection_for_select(@templates, 'id', 'title') %>
  </div>

  <div>
    <%= f.label :status %><br />
    <%= f.status_select %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
