<p id="notice"><%= notice %></p>

<h1>Flyers</h1>

<table>
  <thead>
    <tr>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @flyers.each do |flyer| %>
      <tr>
        <td><%= link_to flyer.title, flyer %></td>
        <td><%= link_to 'Edit', edit_flyer_path(flyer) %></td>
        <td><%= link_to 'Destroy', flyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Generate PDF', generate_flyer_path(flyer), target: :blank %></td>
        <td>
          <% if flyer.generated? %>
            <%= link_to 'View PDF', "#{request.base_url}#{flyer.relative_pdf_path}", target: :blank %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flyer', new_flyer_path %>
