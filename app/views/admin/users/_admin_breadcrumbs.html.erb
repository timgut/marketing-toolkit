<section class="breadcrumbs">
	<div class="crumbs">
		<%= link_to "Manage Users", admin_users_path, title: "Manage Users" %>
		<% if @user && @user.persisted?  %>
		<%= link_to @user.name, edit_admin_user_path(@user), class: "active" %>
