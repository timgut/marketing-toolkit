<% breadcrumb :admin_campaigns %>

<main class="clearfix">

	<section class="workspace metadata cf">
	
		<h1>Campaigns</h1>

		<div class="table">

     <div class="rows">
     
     		  <div class="row header">
            <div class="col one tag">Campaign Title</div>
            <div class="col one delete">Delete</div>
          </div><!--row header-->
          

          <% @campaigns.each do |campaign| %>
          <div class="row">
              <div class="col one tag"><%= link_to campaign.title, edit_admin_campaign_path(campaign) %></div>
              <div class="col one delete">
            		<div class="icons delete action-button"><%= link_to "X", admin_campaign_path(campaign), method:'DELETE' %></div>
            	</div>
          </div>
          <% end %>

      </div><!--rows-->            

    </div><!--table-->
    
		<div class="add-tag">
      <form title="add-tag" action="/admin/campaigns" method="POST" class="cf">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
        <label>Add a new campaign</label>
        <input class="searchinput find-course" type="text" placeholder="Enter campaign title" name="campaign[title]">
				<button class="button active">Add</button>
      </form>     
    </div><!--user-search-->
  
  </section><!--workspace-->
		    
</main>